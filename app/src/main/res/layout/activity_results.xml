                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Базовой жидкости: "/>

            <TextView
                android:textColor="@color/colorPrimary"
                android:id="@+id/basovoyK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/basovoyMl"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" " />


        </TableRow>

        <TableRow
            android:paddingTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
