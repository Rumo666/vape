        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <TextView
                android:paddingLeft="1dp"
                android:id="@+id/textH20"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="@string/proc_water"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <CheckBox

                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:gravity="center" />

            <EditText
                android:id="@+id/howMuchWater"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:text="0"
                android:inputType="number"
                android:visibility="invisible"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tvflavorNeed"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:ems="10"
                android:paddingLeft="1dp"
                android:text="@string/proc_flavor"
                android:textSize="15sp"
                android:textStyle="bold" />


            <EditText

                android:id="@+id/flavorNeed"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:ems="10"
                android:inputType="number"
                android:text="5" />


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tvnicotineInBasic"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:ems="10"

                android:paddingLeft="1dp"
                android:text="@string/v_liquid"
                android:textSize="15sp"
                android:textStyle="bold"

                />

            <EditText
            android:id="@+id/jidkost_na_vihode"
            android:layout_width="45dp"
                android:text="100"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:ems="10"
            android:inputType="number" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:ems="10"

                android:paddingLeft="1dp"
                android:text="@string/ml"
                android:textSize="15sp"
                android:textStyle="bold"

                />

            <EditText
            android:id="@+id/kolitchestvo_kapel"
            android:layout_width="45dp"
                android:text="20"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:ems="10"
            android:inputType="number" />

        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_below="@+id/tableL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
