    <TableLayout
        android:id="@+id/tableL"

        android:paddingLeft="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvliquidNeed"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:paddingLeft="1dp"
                android:text="@string/krepost_base"
                android:textStyle="bold"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/krepost_v_bazovoi"
                android:layout_width="45dp"
                android:layout_height="wrap_content"

                android:ems="10"
                android:inputType="number"
                android:maxLength="3"
                android:paddingLeft="10dp"
                android:text="6"
                android:textAlignment="center" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tvnikotineNeed"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingLeft="1dp"
                android:text="@string/krepost_exit"
                android:textStyle="bold"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/krepost_na_vihode"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:maxLength="2"

                android:text="3"
                android:textAlignment="center" />


        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:paddingLeft="1dp"
                android:id="@+id/tvpgNeed"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:ems="10"
                android:text="@string/pg"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/pgNeed"
                android:textAlignment="center"
                android:text="50"
                android:layout_height="wrap_content"
                android:layout_width="45dp"
                android:ems="10"

                android:inputType="number" />


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:paddingLeft="1dp"

                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:ems="10"
                android:text="Процент пищевого глицерина (VG):"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/vgNeed"
                android:textAlignment="center"
                android:text="45"
                android:layout_height="wrap_content"
                android:layout_width="45dp"
                android:ems="10"

                android:inputType="number" />


        </TableRow>




