<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context="by.avpa.kuchinsky.vape_self_dressing.ReadyRec.Cottos.CottosBourbon">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/cot" />

        <TextView
            android:layout_marginLeft="2dp"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:padding="5dp"
            android:text="Bourbon Custard - это шикарная смесь классического Кентукки бурбона со сладким, сливочным ванильным кремом, жаренным миндалем и легким оттенком кокоса. Наши рецепты позволят вам своими руками превратить ароматизаторы и основу для электронных сигарет в очень вкусную жидкость для электронных сигарет."></TextView>
        <ImageView
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            app:srcCompat="@drawable/cot_rec" />


    </RelativeLayout>




